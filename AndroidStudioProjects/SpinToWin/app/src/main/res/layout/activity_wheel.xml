<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mpvbStyle"
    tools:context=".WheelActivity">

    <include layout="@layout/toolbar" />


    <ImageView
        android:id="@+id/Wheel_icon"
        style="@style/mwhStyle"
        android:layout_margin="@dimen/a10"
        android:layout_centerInParent="true"
        android:src="@drawable/wheel_icon" />


    <ImageView
        android:layout_width="@dimen/a60"
        android:layout_height="@dimen/a60"
        android:layout_centerInParent="true"
        android:rotation="135"
        android:src="@drawable/wheel_shape" />

    <Button
        android:id="@+id/spin"
        style="@style/buttonStyle"
        android:layout_below="@id/Wheel_icon"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/a32"
        android:text="@string/spin" />

</RelativeLayout>