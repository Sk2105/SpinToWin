<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mpvbStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/purple</item>

    </style>

    <style name="textStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/a10</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textSize">@dimen/textSize26</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>


    </style>

    <style name="m26dp">
        <item name="android:layout_height">@dimen/a26</item>
        <item name="android:layout_width">@dimen/a26</item>
        <item name="android:layout_margin">@dimen/a10</item>


    </style>

    <style name="textStyle2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/a5</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textSize">@dimen/textSize26</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkYellow</item>


    </style>

    <style name="buttonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/a10</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textSize">@dimen/textSize24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">@dimen/a20</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>


    </style>

    <style name="editBoxStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/a10</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textSize">@dimen/textSize24</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/corsor</item>
        <item name="android:background">@drawable/edit_box</item>
        <item name="android:padding">@dimen/a10</item>

    </style>

</resources>